<!-- Add Employee Modal -->
<div class="modal fade" id="addEmployeeModal" tabindex="-1" aria-labelledby="addEmployeeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0">
            <div class="modal-header">
                <h5 class="modal-title" id="addEmployeeModalLabel">Add New Employee</h5>
                <button type="button" class="btn-close icon-btn-sm" data-bs-dismiss="modal" aria-label="Close">
                    <i class="ri-close-large-line fw-semibold"></i>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="d-flex flex-column align-items-center justify-content-center p-2 rounded">
                                <div class="avatar-item avatar-xxl avatar-title bg-light-subtle shadow-sm border position-relative">
                                    <i class="ri-upload-cloud-line fs-2 text-muted"></i>
                                    <div class="h-28px w-28px rounded-pill d-flex justify-content-center align-items-center text-muted bg-body-secondary shadow-sm border position-absolute top-0 end-0">
                                        <i class="ri-image-add-line"></i>
                                    </div>
                                    <input type="file" class="position-absolute top-0 end-0 w-100 h-100 opacity-0 form-control" id="employeeAvatar">
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <label class="form-label" for="fullName">Full Name</label>
                            <input type="text" class="form-control" id="fullName" placeholder="Enter full name">
                        </div>
                        <div class="col-12">
                            <label class="form-label" for="designation">Designation</label>
                            <input type="text" class="form-control" id="designation" placeholder="e.g. Senior Developer">
                        </div>
                        <div class="col-12">
                            <label class="form-label" for="phoneNumber">Phone Number</label>
                            <input type="number" class="form-control" id="phoneNumber" placeholder="Enter Phone Number">
                        </div>
                        <div class="col-12">
                            <label class="form-label" for="emailId">Email ID</label>
                            <input type="email" class="form-control" id="emailId" placeholder="example@domain.com">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="joiningDate">Joining Date</label>
                            <input type="text" class="form-control" id="joiningDate" placeholder="Select a date">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="employeeStatus">Status</label>
                            <select class="form-select" id="employeeStatus">
                                <option value="Active">Active</option>
                                <option value="Inactive">Inactive</option>
                                <option value="On Leave">On Leave</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="location">Location</label>
                            <input type="text" class="form-control" id="location" placeholder="City, State">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label" for="experience">Experience (Years)</label>
                            <input type="number" class="form-control" id="experience" placeholder="e.g. 3">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer px-4 py-3">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary">Save Employee</button>
            </div>
        </div>
    </div>
</div>



