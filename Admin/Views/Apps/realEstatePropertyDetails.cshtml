
@{
    ViewBag.Title = "realEstatePropertyDetails";
    ViewBag.pTitle = "Apps";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    <!-- choices -->
    <link rel="stylesheet" href="~/assets/libs/choices.js/public/assets/styles/choices.min.css">
}

<div class="row">
    <div class="col-xl-9">
        <div class="card">
            <div class="card-body">
                <div class="position-relative overflow-hidden rounded">
                    <a href="#!">
                        <img src="~/assets/images/apps/real-eastate/property-5.jpg" alt="Beachfront House" class="property-img object-fit-cover rounded">
                    </a>
                    <span class="badge bg-success position-absolute top-0 start-0 mt-3 ms-3">For Sale</span>
                    <span class="badge bg-dark bg-opacity-80 position-absolute top-0 end-0 mt-3 me-3">Florida</span>
                </div>
                <div class="mt-5 d-flex flex-wrap gap-3 justify-content-between">
                    <div>
                        <h5 class="mb-1">Beachfront Luxury Villa</h5>
                        <p class="text-muted mb-0"><i class="ri-map-pin-range-fill me-1 text-primary fs-5"></i>123 Ocean Drive, Miami Beach, FL 33139</p>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-light icon-btn" aria-label="Share"><i class="ri-share-fill fs-5"></i></button>
                        <button type="button" class="btn btn-light icon-btn" aria-label="Like"><i class="ri-heart-3-fill fs-5 text-danger"></i></button>
                        <button type="button" class="btn btn-light icon-btn" aria-label="Favorite"><i class="ri-star-fill fs-5 text-warning"></i></button>
                        <div class="dropdown">
                            <button type="button" data-bs-toggle="dropdown" class="btn btn-light icon-btn" aria-label="More options">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="javascript:void(0)">This Week</a></li>
                                <li><a class="dropdown-item" href="javascript:void(0)">This Month</a></li>
                                <li><a class="dropdown-item" href="javascript:void(0)">This Year</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="d-flex align-items-center gap-3 my-5">
                    <div class="avatar-item avatar-lg rounded avatar-title text-success bg-success-subtle">
                        <i class="ri-home-5-line fs-4"></i>
                    </div>
                    <h4 class="mb-0">$80,675.00 </h4>
                </div>
                <div class="bg-light-subtle p-3 rounded">
                    <div class="align-items-center text-center g-2 row">
                        <div class="border-end col-xl-2 col-lg-3 col-md-6 col-6">
                            <p class="mb-0 fs-15 fw-medium d-flex align-items-center justify-content-center gap-1">
                                <i class="ri-home-5-line fs-18 text-primary me-1"></i> 5 Bedroom
                            </p>
                        </div>
                        <div class="border-end col-xl-2 col-lg-3 col-md-6 col-6">
                            <p class="mb-0 fs-15 fw-medium d-flex align-items-center justify-content-center gap-1">
                                <i class="ri-water-flash-line fs-18 text-primary me-1"></i> 4 Bathrooms
                            </p>
                        </div>
                        <div class="border-end col-xl-2 col-lg-3 col-md-6 col-6">
                            <p class="mb-0 fs-15 fw-medium d-flex align-items-center justify-content-center gap-1">
                                <i class="ri-ruler-line fs-18 text-primary me-1"></i> 1800 sqft
                            </p>
                        </div>
                        <div class="border-end col-xl-2 col-lg-3 col-md-6 col-6">
                            <p class="mb-0 fs-15 fw-medium d-flex align-items-center justify-content-center gap-1">
                                <i class="ri-building-4-line fs-18 text-primary me-1"></i> 3 Floor
                            </p>
                        </div>
                        <div class="border-end col-xl-2 col-lg-3 col-md-6 col-6">
                            <p class="mb-0 fs-15 fw-medium d-flex align-items-center justify-content-center gap-1">
                                <span class="text-primary">4.4 Review</span>
                            </p>
                        </div>
                        <div class="col-xl-2 col-lg-3 col-md-6 col-6">
                            <p class="mb-0 fs-15 fw-medium d-flex align-items-center justify-content-center gap-1">
                                <i class="ri-price-tag-3-line fs-18 text-primary me-1"></i> For Sale
                            </p>
                        </div>
                    </div>
                </div>
                <h6 class="mb-2 mt-5">Description :</h6>
                <p class="text-muted mb-5">
                    Experience coastal luxury living in this beautiful villa nestled
                    on the pristine shores of Miami Beach. Floor-to-ceiling windows allow natural light to
                    flood the open-concept living spaces, creating a bright and inviting atmosphere. The
                    seamless indoor-outdoor flow leads to a spacious deck overlooking the turquoise waters
                    of the Atlantic Ocean.Whether hosting elegant dinners or enjoying quiet evenings by the
                    fire pit, this home offers an unparalleled lifestyle for discerning buyers.
                </p>
                <h6 class="mb-2">Features & Amenities</h6>
                <ul class="list-group list-borderless mb-3">
                    <li class="list-group-item"> <span class="bullet me-2"></span>Private beach access</li>
                    <li class="list-group-item"> <span class="bullet me-2"></span>Infinity pool with ocean view</li>
                    <li class="list-group-item"> <span class="bullet me-2"></span>State-of-the-art kitchen with modern appliances</li>
                    <li class="list-group-item"> <span class="bullet me-2"></span>Outdoor entertaining area with BBQ</li>
                    <li class="list-group-item"> <span class="bullet me-2"></span>Smart home automation system</li>
                    <li class="list-group-item"> <span class="bullet me-2"></span>Walk-in closets in all bedrooms</li>
                </ul>
                <a href="#!" class="fw-semibold">View More<i class="ri-arrow-right-line ms-1 fw-medium"></i></a>
            </div>
        </div>
    </div>
    <div class="col-xl-3">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Agents Details</h5>
            </div>
            <div class="card-body">
                <div class="avatar-item avatar-3xl mx-auto mb-4">
                    <img class="img-fluid avatar-3xl" src="~/assets/images/avatar/avatar-12.jpg" alt="avatar image">
                </div>
                <a href="#!" class="mb-1 text-center text-body fw-medium fs-17 d-block">Sophia Lee</a>
                <p class="text-muted text-center">Senior Real Estate Agent</p>
                <p class="text-center text-muted">
                    Sarah Johnson is a top-performing real estate expert
                    with 12+ years of experience specializing in luxury homes along California’s coast.
                </p>
                <div class="d-flex justify-content-center gap-3 mt-5 mb-8">
                    <button type="button" class="btn btn-light icon-btn" aria-label="Share on Facebook"><i class="ri-facebook-fill fs-5"></i></button>
                    <button type="button" class="btn btn-light icon-btn" aria-label="Share on Instagram"><i class="ri-instagram-fill fs-5"></i></button>
                    <button type="button" class="btn btn-light icon-btn" aria-label="Share on WhatsApp"><i class="ri-whatsapp-fill fs-5"></i></button>
                    <button type="button" class="btn btn-light icon-btn" aria-label="Share on Twitter"><i class="ri-twitter-fill fs-5"></i></button>
                </div>
                <div class="d-flex gap-3">
                    <button type="button" class="btn btn-primary w-100"><i class="ri-phone-line me-1 text-opacity-70"></i>Call Us</button>
                    <button type="button" class="btn btn-success w-100"><i class="ri-message-3-line me-1 text-opacity-70"></i>Message</button>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Request Information</h5>
            </div>
            <div class="card-body">
                <form>
                    <div class="mb-5">
                        <input type="text" class="form-control" id="name" placeholder="Enter your name" required>
                    </div>
                    <div class="mb-5">
                        <input type="email" class="form-control" id="email" placeholder="Enter your email" required>
                    </div>
                    <div class="mb-5">
                        <input type="tel" class="form-control" id="phone" placeholder="Enter your phone number">
                    </div>
                    <div class="mb-5">
                        <select class="form-select" id="propertyType" required>
                            <option value="apartment">Apartment</option>
                            <option value="villa">Villa</option>
                            <option value="commercial">Commercial</option>
                            <option value="land">Land</option>
                        </select>
                    </div>
                    <div class="mb-5">
                        <input type="text" class="form-control" id="budget" placeholder="Your Budget (e.g. $500,000)">
                    </div>
                    <div class="mb-5">
                        <input type="text" class="form-control" id="contactTime" placeholder="Best Time to Contact (e.g. 10am - 12pm)">
                    </div>
                    <div class="mb-5">
                        <textarea class="form-control" id="message" rows="4" placeholder="Enter your message"></textarea>
                    </div>
                    <div class="mb-6 form-check">
                        <input type="checkbox" class="form-check-input" id="financing">
                        <label class="form-check-label" for="financing">I need financing assistance</label>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Send Request</button>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="card overflow-hidden">
    <div class="w-100 min-h-360px" id="basic_gmap"></div>
</div>

@section scripts{
    <!-- Selector Js -->
    <script src="~/assets/libs/choices.js/public/assets/scripts/choices.min.js"></script>

    <!-- Google Maps -->
    <script src="http://maps.google.com/maps/api/js"></script>

    <!-- Gmaps Js -->
    <script src="~/assets/libs/gmaps/gmaps.min.js"></script>

    <!-- Init js -->
    <script src="~/assets/js/app/real-estate-property-details.init.js"></script>

    <!-- App js -->
    <script src="~/assets/js/app.js"></script>
}