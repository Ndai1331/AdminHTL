
@{
    ViewBag.Title = "google";
    ViewBag.pTitle = "Maps";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Basic Map</h5>
            </div>
            <div class="card-body">
                <div class="w-100 min-h-320px" id="basic_gmap"></div>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Map With Marker</h5>
            </div>
            <div class="card-body">
                <div class="w-100 min-h-320px" id="gmap_with_marker"></div>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Map With Overlays</h5>
            </div>
            <div class="card-body">
                <div class="w-100 min-h-320px" id="gmap_with_overlays"></div>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Map Type</h5>
            </div>
            <div class="card-body">
                <div class="w-100 min-h-320px" id="gmap_map_type"></div>
            </div>
        </div>
    </div>

</div>
@section scripts{

    <!-- google maps api -->
    <script src="http://maps.google.com/maps/api/js"></script>

    <!-- gmaps plugin -->
    <script src="~/assets/libs/gmaps/gmaps.min.js"></script>

    <!-- google maps -->
    <script src="~/assets/js/map/google-map.init.js"></script>

    <!-- App js -->
    <script src="~/assets/js/app.js"></script>
}