                        <div class="form-check sidebar-setting card-radio">
                            <input class="form-check-input" type="radio" name="data-theme-colors" id="themeColor-07" value="lime">
                            <label class="form-check-label avatar-md rounded" for="themeColor-07"></label>
                        </div>
